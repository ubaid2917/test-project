<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Vehicles</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-width: 1200px; /* Increased max-width for a larger table */
            margin: 30px auto;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }
        .table {
            width: 100%;
            border: 2px solid #007bff; /* Added border to the table */
            border-radius: 8px; /* Rounded corners */
            margin: 0 auto;
        }
        .table th, .table td {
            text-align: center;
            padding: 12px; /* Increased padding for better spacing */
        }
        .table thead th {
            background-color: #f8f9fa; /* Light background color for header */
        }
        .table tbody tr:hover {
            background-color: #f1f1f1; /* Hover effect */
        }
        .table th, .table td {
            border: 1px solid #bdc3ca; /* Border for table cells */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="my-4">All Vehicles Info</h2>
        <table class="table table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Owner Name</th>
                    <th scope="col">Car Model</th>
                    <th scope="col">Price</th>
                    <th scope="col">Color</th>
                    <th scope="col">Images</th>
                </tr>
            </thead>
            <% vehicals.forEach((vehical, index) => { %>
                <tbody>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= vehical.ownerName %></td>
                        <td><%= vehical.carModel %></td>
                        <td><%= vehical.price %></td>
                        <td><%= vehical.color %></td>
                        <td>
                            <% vehical.images.forEach(image => { %>
                                <img src="/images/<%= image %>" width="100px" alt="" >
                            <% }) %>
                        </td>
                    </tr>
                </tbody>
            <% }) %>
        </table>
    </div>

   

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+po0T4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

   
</body>
</html>
